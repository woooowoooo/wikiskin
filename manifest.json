{
	"manifest_version": 2,
	"name": "Wikiskin",
	"version": "0.0.4",
	"description": "Choose a Wikimedia project skin without logging in!",
	"icons": {
		"48": "icons/wikiskin-48.png",
		"96": "icons/wikiskin-96.png"
	},
	"background": {
		"scripts": ["wikiskin.js"]
	},
	"browser_action": {
		"default_icon": {
			"48": "icons/wikiskin-48.png"
		},
		"default_title": "Wikiskin",
		"default_popup": "popup.html"
	},
	"content_scripts": [{
		"matches": [
			"*://*.wikimedia.org/*",
			"*://*.wikipedia.org/*",
			"*://*.wiktionary.org/*",
			"*://*.wikiquote.org/*",
			"*://*.wikibooks.org/*",
			"*://*.wikisource.org/*",
			"*://*.wikinews.org/*",
			"*://*.wikiversity.org/*",
			"*://*.mediawiki.org/*",
			"*://*.wikidata.org/*",
			"*://*.wikivoyage.org/*"
		],
		"js": [
			"action.js"
		]
	}]
}